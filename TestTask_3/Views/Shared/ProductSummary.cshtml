@model Product

<div class="card m-2 border border-primary">
    <div class="card-body">
        <div class="card-header border border-dark" style="background-color: #00AA9E; border-radius:5px">
            <h5>
                @Model.Name
            </h5>
        </div>
        <span class="badge badge-pill badge-primary" style="float:right;margin-top:3px;">
            <small style="font-size:20px">@Model.Price.ToString("c")</small>
        </span>
        <div class="card-text p-1">@Model.Description</div>
    </div>
</div>