@model Cart



<div class="navbar-nav mr-auto">
    @if(Model.Lines.Count() > 0)
    {
        <small class="navbar-text mr-auto">
            <b>Your cart: </b>
            @Model.Lines.Sum(x => x.Quantity) items(s)
            @Model.ComputeTotalValue().ToString("c")
        </small>
    }
<a class="btn btn-default" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
    <i class="fa fa-shopping-cart"></i>
</a>
</div>